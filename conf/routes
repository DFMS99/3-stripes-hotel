GET     /users                controllers.ChatServiceController.getAllUsers
GET    /users/:username         controllers.ChatServiceController.getUserByUsername(username: String)
POST     /users              controllers.ChatServiceController.addNewUser
DELETE    /users/:username             controllers.ChatServiceController.deleteUser(username: String)

GET     /rooms                controllers.ChatServiceController.getAllRooms
GET    /rooms/:roomId         controllers.ChatServiceController.getRoomById(roomId: String)
POST     /rooms              controllers.ChatServiceController.addNewRoom
DELETE    /rooms/:roomname             controllers.ChatServiceController.deleteRoom(roomname: String)

GET     /versionedAssets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#Routes for WebSocket chat application
GET     /chat                   controllers.WebSocketChat.index
GET     /chatSocket             controllers.WebSocketChat.socket